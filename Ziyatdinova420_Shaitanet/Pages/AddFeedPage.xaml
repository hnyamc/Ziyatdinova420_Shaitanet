<Page x:Class="Ziyatdinova420_Shaitanet.Pages.AddFeedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ziyatdinova420_Shaitanet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddFeedPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="249*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Добавить корм" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"></TextBlock>

        <TextBlock Text="Название" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Margin="0 0 150 0"></TextBlock>
        <TextBlock Text="Описание" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Margin="0 0 150 0"></TextBlock>

        <TextBox x:Name="NameTB" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="45" Background="Lavender" Margin="150 0 0 0"></TextBox>
        <TextBox x:Name="DescriptionTB" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="45" Background="Lavender" Margin="150 0 0 0"></TextBox>

        <Button x:Name="AddFeedBTN" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="45" Content="Добавить"  Background="Violet" FontSize="15" Click="AddFeedBTN_Click"></Button>

        <Button x:Name="AddPhotoBTN" Grid.Row="3" Grid.Column="0" Width="150" Height="45" Background="Violet" Content="Добавить фото" FontSize="15" Click="AddPhotoBTN_Click"></Button>
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
            <Image x:Name="PhotoIM"></Image>
        </StackPanel>
    </Grid>
</Page>
